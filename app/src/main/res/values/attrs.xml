<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="InputField">

        <!-- EditText -->
        <attr name="text" format="string"/>
        <attr name="maxLines" format="integer"/>
        <attr name="maxLength" format="integer"/>
        <attr name="hint" format="string"/>

        <attr name="enableEndDrawableButton" format="boolean" />
        <attr name="endDrawableButtonIcon" format="reference" />

        <attr name="editTextHeight" format="dimension"/>
        <attr name="editTextFontFamily" format="reference"/>
        <attr name="editTextColor" format="color"/>
        <attr name="editTextSize" format="dimension"/>
        <attr name="editTextStartIconDrawable" format="reference"/>
        <attr name="editTextEndIconDrawable" format="reference"/>
        <attr name="editTextBackground" format="reference"/>
        <attr name="editTextPaddingStart" format="dimension"/>
        <attr name="editTextPaddingEnd" format="dimension"/>
        <attr name="editTextDrawablePadding" format="dimension"/>
        <attr name="editTextHintTextColor" format="color"/>


        <attr name="inputType">
            <flag name="none" value="0x00000000" />
            <flag name="text" value="0x00000001" />
            <flag name="textCapCharacters" value="0x00001001" />
            <flag name="textCapWords" value="0x00002001" />
            <flag name="textCapSentences" value="0x00004001" />
            <flag name="textAutoCorrect" value="0x00008001" />
            <flag name="textAutoComplete" value="0x00010001" />
            <flag name="textMultiLine" value="0x00020001" />
            <flag name="textImeMultiLine" value="0x00040001" />
            <flag name="textNoSuggestions" value="0x00080001" />
            <flag name="textEnableTextConversionSuggestions" value="0x00100001" />
            <flag name="textUri" value="0x00000011" />
            <flag name="textEmailAddress" value="0x00000021" />
            <flag name="textEmailSubject" value="0x00000031" />
            <flag name="textShortMessage" value="0x00000041" />
            <flag name="textLongMessage" value="0x00000051" />
            <flag name="textPersonName" value="0x00000061" />
            <flag name="textPostalAddress" value="0x00000071" />
            <flag name="textPassword" value="0x00000081" />
            <flag name="textVisiblePassword" value="0x00000091" />
            <flag name="textWebEditText" value="0x000000a1" />
            <flag name="textFilter" value="0x000000b1" />
            <flag name="textPhonetic" value="0x000000c1" />
            <flag name="textWebEmailAddress" value="0x000000d1" />
            <flag name="textWebPassword" value="0x000000e1" />
            <flag name="number" value="0x00000002" />
            <flag name="numberSigned" value="0x00001002" />
            <flag name="numberDecimal" value="0x00002002" />
            <flag name="numberPassword" value="0x00000012" />
            <flag name="phone" value="0x00000003" />
            <flag name="datetime" value="0x00000004" />
            <flag name="date" value="0x00000014" />
            <flag name="time" value="0x00000024" />

            <flag name="cardNumber" value="0x00100000" />
        </attr>

        <!-- TextPassword -->
        <attr name="onPasswordInvisibleDrawable" format="reference" />
        <attr name="onPasswordVisibleDrawable" format="reference" />

        <!-- TextURI -->
        <attr name="openUriText" format="string" />
        <attr name="openUriTextColor" format="color" />
        <attr name="openUriTextSize" format="dimension" />
        <attr name="openUriTextFontFamily" format="reference" />
        <attr name="openUriEndDrawable" format="reference" />

        <!-- OutlinedBox -->
        <attr name="isOutlinedBox" format="boolean" />
        <attr name="boxStrokeWidth" format="dimension" />
        <attr name="boxStrokeCornerRadius" format="float" />
        <attr name="boxStrokeCornerRadiusTopStart" format="float" />
        <attr name="boxStrokeCornerRadiusBottomStart" format="float" />
        <attr name="boxStrokeCornerRadiusTopEnd" format="float" />
        <attr name="boxStrokeCornerRadiusBottomEnd" format="float" />
        <attr name="boxStrokeColor" format="color" />
        <attr name="boxStrokeFocusedColor" format="color" />
        <attr name="errorBoxStrokeColor" format="color" />

        <!-- HintLabel -->
        <attr name="header" format="string" />
        <attr name="headerHideWhenEmptyText" format="boolean" />
        <attr name="headerTextSize" format="dimension" />
        <attr name="headerTextColor" format="color" />
        <attr name="headerTextFontFamily" format="reference"/>
        <attr name="headerTextMarginStart" format="dimension"/>
        <attr name="headerTextMarginBottom" format="dimension"/>


        <!-- ErrorLabel -->
        <attr name="isErrorEnabled" format="boolean" />
        <attr name="errorText" format="string" />
        <attr name="errorTextSize" format="dimension" />
        <attr name="errorTextColor" format="color" />
        <attr name="errorTextFontFamily" format="reference"/>
        <attr name="errorTextMarginStart" format="dimension"/>
        <attr name="errorTextMarginTop" format="dimension"/>
        <attr name="errorDrawablePadding" format="dimension"/>
        <attr name="errorIconDrawable" format="reference"/>

    </declare-styleable>

</resources>